        // Настройка нового мока
        function configureMock() {
            const method = document.getElementById('method').value;
            const path = document.getElementById('path').value;
            const statusCode = parseInt(document.getElementById('statusCode').value);
            let responseBody = document.getElementById('responseBody').value;

            // Пробуем распарсить как JSON, если не получается - оставляем строкой
            try {
                responseBody = JSON.parse(responseBody);
            } catch (e) {
                // Оставляем как строку
            }

            // Собираем заголовки
            const headers = {};
            const headerRows = document.getElementById('headers').children;
            for (let row of headerRows) {
                const key = row.children[0].value;
                const value = row.children[1].value;
                if (key && value) {
                    headers[key] = value;
                }
            }

            // Собираем параметры запроса
            const queryParams = {};
            const urlParams = document.getElementById('queryParams').children;
            for (let row of urlParams) {
                const key = row.children[0].value;
                const value = row.children[1].value;
                if (key && value) {
                    queryParams[key] = value;
                }
            }

            bodyParams = null;
            const bodParams = document.getElementById('bodyParams').children;
            for (let row of bodParams) {
                const key = row.children[0].value;
                const value = row.children[1].value;
                if (key && value) {
                    bodyParams = {}
                    bodyParams[key] = value;
                }
            }

            const mockRequest = {
                Path: path,
                Method: method,
                QueryParams: queryParams,
                BodyParameters: bodyParams,
                Response: {
                    StatusCode: statusCode,
                    Body: responseBody,
                    Headers: headers
                }
            };

            fetch('/webmocks/mock/configure', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(mockRequest)
            })
                .then(response => {
                    // В функции configureMock()
                    if (path === "/" || path === "") {
                        alert("Нельзя настроить мок для корневого пути. Используйте конкретные пути, например '/api/users'");
                        return;
                    }
                    if (response.ok) {
                        alert('Мок успешно настроен!');
                        closeCreateModal();
                        refreshMocks();
                    } else {
                        alert('Ошибка при настройке мока');
                        closeCreateModal();
                    }
                })
                .catch(error => {
                    console.error('Ошибка:', error);
                    alert('Ошибка при настройке мока');
                });
        }

        // Обновление таблицы моков
        function refreshMocks() {
            fetch('/webmocks/mock/configurations')
                .then(response => response.json())
                .then(data => {
                    const tbody = document.querySelector('#mocksTable tbody');
                    tbody.innerHTML = '';

                    // Сортируем данные в обратном порядке (по ID или дате создания)
                    const reversedData = [...data].reverse(); // Простое обращение массива

                    reversedData.forEach(item => {
                        const row = document.createElement('tr');

                        const methodCell = document.createElement('td');
                        methodCell.textContent = item.Method;

                        const pathCell = document.createElement('td');
                        pathCell.textContent = item.Path;

                        const queryParamsCell = document.createElement('td');
                        queryParamsCell.textContent = item.QueryParameters
                            ? Object.entries(item.QueryParameters).map(([k, v]) => `${k}: ${v}`).join(', ')
                            : '';

                        const bodyParamsCell = document.createElement('td');
                        bodyParamsCell.textContent = item.BodyParameters
                            ? Object.entries(item.BodyParameters).map(([k, v]) => `${k}: ${v}`).join(', ')
                            : '';

                        const statusCell = document.createElement('td');
                        statusCell.textContent = item.Response.StatusCode;

                        const responseCell = document.createElement('td');
                        responseCell.textContent = typeof item.Response.Body === 'object'
                            ? JSON.stringify(item.Response.Body)
                            : item.Response.Body;

                        const headersCell = document.createElement('td');
                        headersCell.textContent = item.Response.Headers
                            ? Object.entries(item.Response.Headers).map(([k, v]) => `${k}: ${v}`).join(', ')
                            : '';

                        row.appendChild(methodCell);
                        row.appendChild(pathCell);
                        row.appendChild(statusCell);
                        row.appendChild(queryParamsCell);
                        row.appendChild(bodyParamsCell);
                        row.appendChild(responseCell);
                        row.appendChild(headersCell);
                        tbody.appendChild(row);
                        const deleteCell = document.createElement('td');
                        const deleteBtn = document.createElement('button');
                        deleteBtn.textContent = 'X';
                        deleteBtn.style.backgroundColor = '#f44336';
                        deleteBtn.onclick = () => deleteMock(item.Id);
                        deleteCell.appendChild(deleteBtn);
                        row.appendChild(deleteCell);

                        const editCell = document.createElement('td');
