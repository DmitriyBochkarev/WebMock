                        editBtn.style.backgroundColor = '#444337';
                        editBtn.onclick = () => openEditModal(item.Id);
                        editCell.appendChild(editBtn);
                        row.appendChild(editCell);
                    });
                })
                .catch(error => {
                    console.error('Ошибка:', error);
                });

        }

